<definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <properties>
        <document>
            <root>
                <local_name>file_loader</local_name>
            </root>
            <namespaces/>
            <schema/>
        </document>
    </properties>
    <form>
        <properties>
            <type>form</type>
            <access>true</access>
            <attributes>
                <enctype>multipart/form-data</enctype>
            </attributes>
            <title>form_upload</title>
            <tree>true</tree>
        </properties>
        <children>
            <element name="title">
                <properties>
                    <type>textfield</type>
                    <access>true</access>
                    <description>Title of work</description>
                    <title>Title</title>
                    <tree>true</tree>
                </properties>
                <children/>
            </element>
            <element name="file_upload">
                <properties>
                    <type>file</type>
                    <access>true</access>
                    <description>Select well-formed MODS file</description>
                    <tree>true</tree>
                </properties>
                <children/>
            </element>
            <element name="submit">
                <properties>
                    <type>submit</type>
                    <access>true</access>
                    <default_value>Upload File</default_value>
                    <description>click to submit.</description>
                    <title>Get File</title>
                    <tree>true</tree>
                </properties>
                <children/>
            </element>
        </children>
    </form>
</definition>
